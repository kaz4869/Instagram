<% if user_signed_in? %>
    <% if current_user.already_post_liked?(post) %>
        <%= link_to post_post_like_path(id: post.id, post_id: post.id), method: :delete, remote: true do %>
            <i class="fas fa-thumbs-up"></i><%= post.post_likes.count %>
        <% end %>
    <% else %>
        <%= link_to post_post_likes_path(id: post.id, post_id: post.id), method: :post, remote: true do %>
            <i class="far fa-thumbs-up"></i><%= post.post_likes.count %>
        <% end %>
    <% end %>
<% else %>
    <i class="far fa-thumbs-up"></i><%= post.post_likes.count %>
<% end %>