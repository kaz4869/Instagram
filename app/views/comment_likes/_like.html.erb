<% if user_signed_in? %>
    <% if current_user.already_comment_liked?(comment) %>
        <%= link_to post_comment_comment_like_path(id:comment.id, post_id:post.id, comment_id:comment.id), method: :delete, remote: true do %>
            <i class="fas fa-thumbs-up"></i><%= comment.comment_likes.count %>
        <% end %>
    <% else %>
        <%= link_to post_comment_comment_likes_path(post_id:post.id, comment_id:comment.id), method: :post, remote: true do %>
            <i class="far fa-thumbs-up"></i><%= comment.comment_likes.count %>
        <% end %>
    <% end %>
<% else %>
    <i class="far fa-thumbs-up"></i><%= comment.comment_likes.count %>
<% end %>
    