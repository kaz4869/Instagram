<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <label class="userform-label">ユーザー名</label>
    <%= f.text_field :name, autofocus: true, size: 40, class:"form-field" %>
  </div>

  <div class="field">
    <label class="userform-label">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40, class:"form-field" %>
  </div>

  <div class="field">
    <div class="file-label">ユーザーアイコン</div>
    <%= f.file_field :image, class:"file-field" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <label class="userform-label">新しいパスワード</label>
    <%= f.password_field :password, autocomplete: "new-password", size: 40, class:"form-field" %>
    <% if @minimum_password_length %>
      <br />
    <% end %>
  </div>

  <div class="field">
    <label class="userform-label">新しいパスワードの再入力</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 40, class:"form-field" %>
  </div>

  <div class="field">
    <label class="userform-label">現在のパスワード</label>
    <%= f.password_field :current_password, autocomplete: "current-password", size: 40, class:"form-field" %>
  </div>

  <div class="actions">
    <%= f.submit "更新する", class:"submit" %>
  </div>
<% end %>

<%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除しますか?" }, method: :delete, class:"btn btn-primary" %>

<%= link_to "Back", :back, class:"btn btn-primary" %>
