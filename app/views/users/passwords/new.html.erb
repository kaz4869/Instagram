<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "off", size: 40, id:"email-field" %>
    <label>メールアドレス</label>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"submit" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

<script>
var email = document.querySelector('#email-field');
var emailField  = document.getElementById("email-field");

function myFunction(form, body) {
    form.focusin = function (){
        form.className = "active";
    }; 
    form.focusout = function (){
        if (body.value == "") {
            form.className = "";
        } else {
            form.className = "filled"
        }
    }; 
}

myFunction(emailField, email);

</script>
